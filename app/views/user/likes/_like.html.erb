<% if user_signed_in? %>
    <% if current_user.already_liked?(book) %>
        <%= link_to book_likes_path(book), method: :delete, remote: true do %>
            <i class="fa fa-heart" aria-hidden="true" style="color: red;">
                <%= book.likes.count %>
            </i>
        <% end %>
    <% else %>
        <%= link_to book_likes_path(book), method: :post, remote: true do %>
            <i class="fa fa-heart" aria-hidden="true" style="color: #C0C0C0;">
                <%= book.likes.count %>
            </i>
        <% end %>
    <% end %>
<% else %>
    <i class="fa fa-heart" aria-hidden="true">
            <%= book.likes.count %>
    </i>
<% end %>