<h1>Book詳細</h1>
<table>
  <tr>
    <th>タイトル</th>
    <th>著者</th>
    <th>内容</th>
  </tr>
  <tr>
    <td>
      <%= @book.title %>
    </td>
    <td>
      <%= @book.author %>
    </td>
  </tr>
  <div id="show_like_<%= @book.id %>">
  <%= render 'user/likes/like', book: @book %>
  </div>
</table>
<div class="row">
    <ul>
        <li class="comment-create">
            <h3 class="text-left title">レビュー</h3>
        </li>
        <li id="comments_area">
            <%= render partial: 'user/comments/index', locals: { comments: @comments } %>
        </li>
    </ul>
    <hr>
    <% if user_signed_in? %>
        <div class="comment-create">
            <h3 class="text-left">レビューを投稿する</h3>
            <%= render partial: 'user/comments/form', locals: { comment: @comment, book: @book } %>
        </div>
    <% end %>
</div>

<%= link_to "一覧へ", books_path %>